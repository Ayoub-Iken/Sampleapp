<% provide(:title, "Log in") %>
<!--  ********************************************** Login Page ****************************************************-->
<div class="row">

  <!--  Log in side-->
  <div class="col-md-4">

    <h1>Log in</h1>
    <div class="panel panel-default">
      <%= form_for(:session, url: login_path) do |f| %>
      <div class="panel-body">

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

      </div>
      <div class="panel-footer clearfix">

          <div class="form-group pull-left">
            <%= link_to "Sign up", signup_path, class: "btn btn-default btn-lg" %>
          </div>

          <div class="form-group pull-right">
            <%= submit_tag "Log in", class: "btn btn-primary btn-lg" %>
          </div>

      </div>
      <% end %>
      </div>
  </div>

  <!--  thumbnail side -->
  <div class="col-md-6 col-md-offset-2">
    <div class="thumbnail log">
      <%= image_tag 'login.jpg', alt: "login image", class: "img-responsive", id: "loginimg" %>
      <div class="caption quote">
          <p>Education is the most powerful weapon which you can use to change the world. <bold><small> â€• Nelson Mandela</small></bold></p>

      </div>

    </div>
  </div>



</div>
